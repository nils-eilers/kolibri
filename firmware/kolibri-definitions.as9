IO_FT245R       = $FE2C         ; virtual COM port R/W
IO_INPORT       = $FE2D
IO_INWP0        = 1
IO_INWP1        = 2
IO_INCD0        = 4
IO_INCD1        = 8
IO_INBOOT       = 16            ; low if boot switch pressed
IO_INIBF        = 32
