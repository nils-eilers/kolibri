*************
* CPU flags *
*************

CARRYFLAG       = 1
OVERFLOWFLAG    = 2
ZEROFLAG        = 4
NEGATIVEFLAG    = 8
IRQFLAG         = 16
HALFCARRYFLAG   = 32
FIRQFLAG        = 64
ENTIREFLAG      = 128

****************************************
* register position on stack after IRQ *
****************************************

***************
* Stack       *
*-------------*
* 6809   6309 *
* c:     PC   *
* b:          *
* a: PC  U    *
* 9:          *
* 8: U   Y    *
* 7:          *
* 6: Y   X    *
* 5:     DP   *
* 4: X   F    *
* 3: DP  E    *
* 2: B   B    *
* 1: A   A    *
* 0: CC  CC   *
***************

; Stack offsets for SWI routines = SWI offset + 2 for JSR

SOFF_CC         = 2
SOFF_A          = 3
SOFF_B          = 4
SOFF_E          = 5
SOFF_F          = 6
SOFF_DP         = 7
SOFF_X          = 8
SOFF_Y          = 10
SOFF_U          = 12
SOFF_PC         = 14

