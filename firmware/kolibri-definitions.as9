IO_INRXF        = 128
IO_SPI_CLK_0    = $FE2E
IO_SPI_CLK_1    = $FE2F
IO_CARDSEL      = $FE30
IO_CS_DRV_0     = 1
IO_CS_DRV_1     = 2
